<div class="container-sm">

  <p id="notice"><%= notice %></p>

  <h1 class="text-center">Pantallas</h1>
  <hr>
  <div class="container-fluid nav">
      <ul class="me-auto mb-2 mb-lg-0">
        <% if current_user.role =='admin'%>
          <span class="inline-flex rounded-md shadow-sm">
            <%= link_to t('new_screen'), new_screen_path, class: "btn btn-outline-primary", type: "button"%>
          </span>
        <%end%>
      </ul>
      <%= link_to 'Reporte', screens_path(@screen, :format => :pdf) , class: "btn btn-outline-primary btn-xs"%>
    <%= form_tag( '/search/results_screen', options = { class: "d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" }) do %>
              <div class="input-group">
                <%= text_field_tag("termino", value = nil, options = { class: "form-control bg-light border-0 small", placeholder: "Search for..."}) %>
                <div class="input-group-append">
                  <%= submit_tag(value = "Buscar", options = { class: "btn btn-primary" }) do %>
                    <i class="fas fa-search fa-sm"></i>
                  <% end %>
                </div>
              </div>
    <% end %>
  </div>
  <hr>
  <br>
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th class="text-center"><%= t("code")%></th>
        <th class="text-center"><%= t("campus")%></th>
        <th class="text-center"><%= t("size")%></th>
        <th class="text-center"><%= t("model")%></th>
        <th class="text-center"><%= t("mark")%></th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @screens.each do |screen| %>
        <tr>
          <td class="text-center p-3"><%= screen.code %></td>
          <td  class="text-center p-3"><%= screen.campus %></td>
          <td class="text-center p-3"><%= screen.size %></td>
          <td class="text-center p-3"><%= screen.model %></td>
          <td class="text-center p-3"><%= screen.mark %></td>
          <td class="text-center">
            <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
              <!--<% if can? :show, screen %>-->
              <!-- <%= link_to t('show'), screen, class: "btn btn-outline-primary", type: "button"%> -->  
              <!--<%end %>-->
              <% if can? :edit, screen %>
                <%= link_to t('edit'), edit_screen_path(screen), class: "btn btn-outline-primary", type: "button" %>
              <%end %>
              <% if can? :destroy, screen %>
                <%= link_to t('destroy'), screen, method: :delete, data: { confirm: t('are_you_sure?') } , class: "btn btn-outline-primary", type: "button" %>
              <%end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>

